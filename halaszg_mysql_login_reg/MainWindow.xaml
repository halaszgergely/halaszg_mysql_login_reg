        <Button x:Name="login" Content="login" HorizontalAlignment="Left" Margin="124,147,0,0" VerticalAlignment="Top" Width="41" Click="login_Click" BorderThickness="3,3,3,1"/>
        <PasswordBox x:Name="txtPass" HorizontalAlignment="Left" Margin="133,99,0,0" VerticalAlignment="Top" Width="120" BorderThickness="3,3,3,1"/>
        <Border HorizontalAlignment="Left" Height="166" Margin="26,236,0,0" VerticalAlignment="Top" Width="647">
