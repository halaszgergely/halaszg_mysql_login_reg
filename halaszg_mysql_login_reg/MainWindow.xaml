                    <Label x:Name="lbDebug" Content="" HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Top" Width="643"/>
                    <Label Content="Username:" HorizontalAlignment="Left" Margin="25,8,0,0" VerticalAlignment="Top" Width="70"/>
                    <PasswordBox x:Name="reg_pass" HorizontalAlignment="Left" Margin="107,55,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label Content="Password:" HorizontalAlignment="Left" Margin="25,51,0,0" VerticalAlignment="Top" Width="70"/>
                    <Label Content="Password again:" HorizontalAlignment="Left" Margin="0,99,0,0" VerticalAlignment="Top" Width="95"/>
                    <PasswordBox x:Name="reg_passAgain" HorizontalAlignment="Left" Margin="107,103,0,0" VerticalAlignment="Top" Width="120"/>
                    <TextBox x:Name="reg_user" HorizontalAlignment="Left" Margin="107,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="register" Content="register" HorizontalAlignment="Left" Margin="147,146,0,0" VerticalAlignment="Top" Click="register_Click"/>
                </Grid>
            </Border>
        </Border>
        <ListBox x:Name="lb"  Margin="298,14,353,42"/>
        <PasswordBox x:Name="changePassCurrent" HorizontalAlignment="Left" Margin="624,38,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="changePassAgain" HorizontalAlignment="Left" Margin="624,104,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="changePass" HorizontalAlignment="Left" Margin="624,72,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Régi jelszó:" HorizontalAlignment="Left" Margin="548,33,0,0" VerticalAlignment="Top" Height="27"/>
