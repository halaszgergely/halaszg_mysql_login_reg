        <Label Content="Új jelszó:" HorizontalAlignment="Left" Margin="554,65,0,0" VerticalAlignment="Top" Height="27"/>
        <CheckBox x:Name="deleteSure" Content="Biztosan törölni akarja?" HorizontalAlignment="Left" Margin="605,224,0,0" VerticalAlignment="Top"/>
        <Button x:Name="change" Content="Módosít" HorizontalAlignment="Left" Margin="660,137,0,0" VerticalAlignment="Top" Click="change_Click"/>
        <Button x:Name="delete" Content="töröl" HorizontalAlignment="Left" Margin="656,255,0,0" VerticalAlignment="Top" Click="delete_Click"/>

    </Grid>
</Window>
